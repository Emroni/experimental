{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./src",
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "module": "esnext",
        "moduleResolution": "node",
        "sourceMap": true,
        "target": "es2015",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2018",
            "dom"
        ],
        "paths": {
            "@/components": [
                "components"
            ],
            "@/constants": [
                "constants"
            ],
            "@/experiments": [
                "experiments"
            ],
            "@/helpers": [
                "helpers"
            ]
        }
    }
}